@model BookLoan.Models.SearchBookViewModel
@{
    ViewData["Title"] = "Search Library Results";
}
<h1>Index</h1>
<p>
    Search Results
</p>

<form>
    <p>
        <select asp-for="BookGenre" asp-items="@Model.Genres">
            <option value="">All</option>
        </select>
        Title: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
        @*<input type="submit" value="Save" class="btn btn-default" />*@

    </p>
</form>

<table class="table">
    @*Markup removed for brevity.*@
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Book[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book[0].Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book[0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book[0].YearPublished)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.Movie[0].Rating)
                </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Book)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.YearPublished)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.Rating)
                    </td>*@
                <td>
                    <a asp-area="" asp-controller="Book" asp-action="Details" asp-route-id="@item.ID">Details</a>
                </td>
            </tr>
        }

    </tbody>
</table>
<div class="form-group">
    @*onclick="location.href='@Url.Action("Index", "Home")'"*@
    <a asp-area="" asp-controller="Home" asp-action="Index">Back to Home</a>
</div>

