@model List<BookLoan.Models.ReportViewModels.LoanedBookReportViewModel>;

@*@page
    @{
        ViewData["Title"] = "List";
    }*@

<h2>My Books Loaned</h2>

<table class="table">
    @*Markup removed for brevity.*@
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].YearPublished)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].LastDateLoaned)
            </th>
            <th>
                Details
            </th>
            <th>
                Review
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.YearPublished)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastDateLoaned)
                </td>

                @*<td>
                        @Html.DisplayFor(modelItem => item.Rating)
                    </td>*@
                <td>
                    <a asp-area="" asp-controller="Book" asp-action="Details" asp-route-id="@item.ID">Details</a>
                </td>
                <td>
                    @if (item.WasBookReviewed)
                    {
                        <div style="font-style:normal; font-size:x-large; color:green">
                            @Html.DisplayFor(modelItem => item.Rating)
                        </div>
                    }
                    else
                    {
                        <a asp-area="" asp-controller="Review" asp-action="Review" asp-route-id="@item.ID">Review Book</a>
                    }
                </td>
            </tr>
        }

    </tbody>
</table>
<div class="form-group">
    @*onclick="location.href='@Url.Action("Index", "Home")'"*@
    <a asp-area="" asp-controller="Home" asp-action="Index">Back to Home</a>
</div>

