@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/libimage1.jpg" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Welcome to Book Loan!
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/libimage2.jpg" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Search for a Book to Loan from our extensive catalog.
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/libimage3.jpg" alt="Package Management" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Lookup and provide book reviews.
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/libimage4.jpg" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Loan a Book.
                    Reserve a Book.
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-3">
        <h2>Who are we</h2>
        <ul>
            <li>We are an online Book Library</li>
            <li>We provide Book loans from multiple locations</li>
            <li>We provide Book reviews</li>
        </ul>
    </div>
    <div class="col-md-3">
        <h2>How to</h2>
        <ul>
            <li>Simply register.</li>
            <li>Login.</li>
            <li>Search for a book.</li>
            <li>Loan or Reserve a book.</li>
            <li>Return a book.</li>
            <li>Review a book.</li>
        </ul>
    </div>
    <div class="col-md-3">
        <h2>Service Overview</h2>
        <ul>
            <li>We operate 24x7 365 days a year!</li>
            <li>Our book catalogs are updated weekly with the latest books.</li>
            <li>We regularly maintain our used books.</li>
            <li>We are contactable at <a href=@Url.Action("Contact", "Home")>Here</a></li>
        </ul>
    </div>
    <div class="col-md-3">
        <h2>Support Contact and Hours</h2>
        <ul>
            <li>Monday-Friday 8am-5pm</li>
            <li>Saturday-Sunday 9am-3pm</li>
        </ul>
    </div>
</div>
